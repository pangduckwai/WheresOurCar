<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="@dimen/fab_margin"
		android:descendantFocusability="beforeDescendants"
		android:focusableInTouchMode="true"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		tools:showIn="@layout/app_main"
		tools:context="org.sea9.android.woc.MainActivity">

	<AutoCompleteTextView
			android:id="@+id/vehicle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_narrow"
			android:layout_marginEnd="@dimen/margin_normal"
			android:layout_marginStart="@dimen/fab_margin"
			android:layout_marginTop="@dimen/fab_margin"
			android:hint="@string/hint_vehicle"
			android:textSize="@dimen/text_title"
			android:maxLength="50"
			android:selectAllOnFocus="true"
			android:completionThreshold="1"
			android:inputType="textCapWords|textNoSuggestions"
			android:imeOptions="actionNext|flagNoExtractUi"
			app:layout_constraintEnd_toStartOf="@+id/vehicle_add"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"/>

	<ImageButton
			android:id="@+id/vehicle_add"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_normal"
			android:layout_marginEnd="@dimen/fab_margin"
			android:contentDescription="@string/content_add"
			android:minWidth="0dp"
			android:minHeight="0dp"
			android:padding="0dp"
			android:background="?android:attr/selectableItemBackground"
			app:layout_constraintBottom_toBottomOf="@+id/vehicle"
			app:layout_constraintEnd_toEndOf="parent"
			app:srcCompat="@android:drawable/ic_input_add" />

	<AutoCompleteTextView
			android:id="@+id/parking"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_narrow"
			android:layout_marginEnd="@dimen/fab_margin"
			android:layout_marginStart="@dimen/fab_margin"
			android:layout_marginTop="@dimen/fab_margin"
			android:hint="@string/hint_parking"
			android:textSize="@dimen/text_large"
			android:maxLength="50"
			android:selectAllOnFocus="true"
			android:completionThreshold="1"
			android:inputType="textCapWords|textNoSuggestions"
			android:imeOptions="actionNext|flagNoExtractUi"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/vehicle"/>

	<EditText
			android:id="@+id/floor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_narrow"
			android:layout_marginEnd="@dimen/margin_narrow"
			android:layout_marginStart="@dimen/fab_margin"
			android:layout_marginTop="@dimen/fab_margin"
			android:hint="@string/hint_floor"
			android:textSize="@dimen/text_title"
			android:maxLength="3"
			android:selectAllOnFocus="true"
			android:inputType="textCapCharacters"
			android:imeOptions="actionNext|flagNoExtractUi"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/parking"/>

	<EditText
			android:id="@+id/lot"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_narrow"
			android:layout_marginStart="@dimen/margin_narrow"
			android:layout_marginTop="@dimen/fab_margin"
			android:hint="@string/hint_lot"
			android:textSize="@dimen/text_title"
			android:maxLength="3"
			android:selectAllOnFocus="true"
			android:inputType="textCapCharacters"
			android:imeOptions="actionDone|flagNoExtractUi"
			app:layout_constraintStart_toEndOf="@+id/floor"
			app:layout_constraintTop_toBottomOf="@+id/parking"/>

	<TextView
			android:id="@+id/update"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/margin_narrow"
			android:layout_marginEnd="@dimen/fab_margin"
			android:layout_marginTop="@dimen/fab_margin"
			android:paddingStart="0dp"
			android:paddingEnd="@dimen/margin_normal"
			android:hint="@string/hint_update"
			android:textSize="@dimen/text_medium"
			app:layout_constraintBaseline_toBaselineOf="@+id/lot"
			app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>