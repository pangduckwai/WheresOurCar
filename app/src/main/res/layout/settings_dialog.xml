<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:card_view="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/margin_narrow"
			android:paddingBottom="@dimen/margin_normal"
			android:focusable="true"
			android:focusableInTouchMode="true"
			android:minWidth="@dimen/dialog_minWidth"
			android:orientation="vertical">

		<android.support.v7.widget.CardView
				android:id="@+id/card_pub"
				android:layout_gravity="center"
				android:layout_width="match_parent"
				android:layout_height="@dimen/card_height"
				android:layout_margin="@dimen/margin_narrow"
				card_view:cardCornerRadius="@dimen/margin_narrow"
				card_view:cardBackgroundColor="@color/colorCard">
			<TextView
					android:id="@+id/temp_pub"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/margin_normal"
					android:layout_gravity="center_vertical|center"
					android:background="@android:color/darker_gray"
					android:textSize="@dimen/text_title"
					android:text="@string/app_name"/>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
				android:id="@+id/card_sub"
				android:layout_gravity="center"
				android:layout_width="match_parent"
				android:layout_height="@dimen/card_height"
				android:layout_margin="@dimen/margin_narrow"
				card_view:cardCornerRadius="@dimen/margin_narrow"
				card_view:cardBackgroundColor="@color/colorCard">
			<TextView
					android:id="@+id/temp_sub"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/margin_normal"
					android:layout_gravity="center_vertical|center"
					android:textSize="@dimen/text_title"
					android:text="@string/app_name"/>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
				android:id="@+id/card_oth"
				android:layout_gravity="center"
				android:layout_width="match_parent"
				android:layout_height="@dimen/card_height"
				android:layout_margin="@dimen/margin_narrow"
				card_view:cardCornerRadius="@dimen/margin_narrow"
				card_view:cardBackgroundColor="@color/colorCard">
			<TextView
					android:id="@+id/temp_oth"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/margin_normal"
					android:layout_gravity="center_vertical|center"
					android:textSize="@dimen/text_title"
					android:text="@string/app_name"/>
		</android.support.v7.widget.CardView>
	</LinearLayout>
</android.support.v4.widget.NestedScrollView>
